{
  "manifest_version": 3,
  "name": "PR to Markdown",
  "version": "1.0.0",
  "description": "Add a copy button to GitHub and GitLab pull requests to copy PR content as markdown",
  "permissions": [
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*/pull/*",
        "*://*/*/merge_requests/*",
        "*://*/*/-/merge_requests/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
